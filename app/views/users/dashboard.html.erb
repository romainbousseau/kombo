<h1 style="text-align:center;">
  Welcome to your dashboard <%= @user.first_name %>
  <a id="skill-field"><i class="fa fa-map-marker rad-txt-danger"></i> <%= @user.work_department %></a>
</h1>
<!-- transformer le departement en paramètre dynamique -->

<div class="container">

  <div class="row">
      <div class="col-md-4 col-xs-6">
        <div class="rad-info-box rad-txt-success">
          <i class="fa fa-gift"></i>
          <span class="heading">Earned Points</span>
          <span class="value"><span>4949</span></span>
        </div>
      </div>
      <div class="col-md-4 col-xs-6">
        <div class="rad-info-box rad-txt-primary">
          <i class="fa fa-user-plus"></i>
          <span class="heading">People you helped</span>
          <span class="value"><span>23</span></span>
        </div>
      </div>
      <div class="col-md-4 col-xs-6">
        <div class="rad-info-box rad-txt-danger">
          <i class="fa fa-level-up"></i>
          <span class="heading">Next bonus CE in </span>
          <span class="value"><span>49 points</span></span>
        </div>
      </div>
  </div>
  <br>


  <div class="row">

    <div class="col-md-6">
      <div id="skills">
        <h2 class="header_block"> Your skills </h2>
          <% @skills.each do |skill| %>
          <ul class="tags">
            <li class="tag"><a href="#"><%= skill %></a></li>
          </ul>
          <% end %>
         <%= simple_form_for :skill, method: "get", url: {action: :add_skill} do |f| %>
    <%= f.input :name, label: false, as: :select, collection: Skill.all.map { |skill| [skill.name, skill.name] }, input_html: { rows: 6, class: "chosen-select", multiple: true, :data => { :placeholder => 'select the skills you want to add'}} %>
     <%= f.submit "submit", class: "btn btn-primary"%>
     <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div id="Activity">
      <h2 style="text-align:center;" class="header_block"><%= image_tag("calendar.png", size: "30x30") %>  your schedule </h2>
<ol class="activity-feed">
  <li class="feed-item">
    <time class="date" datetime="9-25">Sep 25</time>
    <span class="text">Responded to need <a href="#"> "Need SEO advise for new page"</a></span><br>
    <span class="text">Responded to need <a href="#"> "Need SEA advise for new page"</a></span>
  </li>
  <li class="feed-item">
    <time class="date" datetime="9-23">Sep 23</time>
    <span class="text">Accepted the task<a href="#"> “Need a excel expert”</a></span>
  </li>
  <li class="feed-item">
    <time class="date" datetime="9-21">Sep 21</time>
    <span class="text">Your need has been taken by <a href="#">“Cedric Njanga”</a></span>
  </li>
</ol>
      </div>
    </div>


  </div>
