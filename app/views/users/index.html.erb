<h1 class="text-center">YOUR SEARCH</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="users-list">
        <h3 class="text-center">Your matches</h3>
        <% @users.each do |user| %>
          <div class="user">
            <%= user.first_name %> <%= user.last_name %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-8">
      <h3 class="text-center">show user</h3>
    </div>
    <div class="col-xs-12 col-sm-8">
      <h3 class="text-center">my brief</h3>
        <div class="brief text-center">
        <%= render 'matches/brief' %>
        </div>
    </div>
  </div>
</div>
