
<div id="user-list">
  <h3 class="text-center">Select a Team Mate</h3>
  <% if @users.empty? || @users.nil?  %>
    <div class="">
      <h4> Sorry, no coworker your Kombo Search ! </h4>
    </div>
  <% else %>
    <% @users.each_with_index do |user, index| %>
      <%= link_to "", class: "select-user-link", data: { "user-id" => user.id } do %>
        <div class="user <%= index == 0 ? 'user-blue' : 'user-grey' %>" id="<%=user.id %>">
          <% if user.linkedin_picture_url.nil? %>
            <% if user.photo.nil? %>
              <%= image_tag "profile_default.png", class: "avatar" %>
            <% else %>
              <%= cl_image_tag user.photo.path, width: 30, height: 30, crop: :fill, class: "avatar" %>
            <%end%>
        <% else %>
            <%= image_tag user.linkedin_picture_url, class: "avatar" %>
        <% end %>
            <p class="name"><%= user.first_name %> <%= user.last_name %></p>
            <i class="fa fa-check"></i>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

