<div class="card">
  <h3 class="text-center">show user</h3>
  <div class="user-profile">
    <% if user.nil? %>
    <% else %>
      <% if user.linkedin_picture_url.nil? %>
        <div class="user-description text-center">
          <%= image_tag "http://placehold.it/30x30" %>
          <p><%= user.first_name %> <%= user.last_name %></p>
        </div>
        <ul>
        <% user.tag_list.each do |skill| %>
          <li class="tags">
             <%= skill %>
          </li>
        <% end %>
        </ul>
      <% else %>
        <div class="user-description text-center">
          <%= image_tag user.linkedin_picture_url %>
          <p><%= user.first_name %> <%= user.last_name %></p>
        </div>
        <ul>
        <% user.tag_list.each do |skill| %>
          <li class="tag"> <%= skill %> </li>
        <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
