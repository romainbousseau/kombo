<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_url('kombo_header.png') %>);">


  <div class="banner-content">
    <h1> Kombo </h1>
    <p>Find the skill you need now !</p>
    <%= simple_form_for @skill do |f| %>
    <%= f.input :name, as: :select, collection: Skill.all.map { |skill| [skill.name, skill.id] }, input_html: { rows: 6, class: "chosen-select", multiple: true} %>
    <%= f.submit "find match", class: "btn-mine" %>
    <% end %>
  </div>
</div>


