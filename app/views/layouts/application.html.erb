<!DOCTYPE html>
<html>
  <head>
    <title>Kombo : l'art de l'apprentissage en binome</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>
  <body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-brand">
        <%= link_to image_tag("logotrans.png", width: 60, :class => "logo"), root_path %>
      </div>

      <% if user_signed_in? %>
        <ul class=" myul nav navbar-nav navbar-right">

          <li class="navelement">
            <%= link_to "#" do %>
              <div class="whole_badge">
                <i class="fa fa-envelope-o"></i>
                <div class="badge badge-blue">3</div>
              </div>
            <% end %>
            <span class="span"></span>
          </li>

          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle" %>
          <li class="navelement"> <%= link_to "Account", edit_user_registration_path %>
            <span class="span"></span>
          </li>
          <li class="navelement"> <%= link_to "Sign out", destroy_user_session_path, method: :delete %>  <span class="span"></span class="span"></li>
        </ul>

      <% else %>
        <ul class="myul nav navbar-nav navbar-right">
          <li class="navelement"><%= link_to "Sign up", new_user_registration_path %>
            <span class="span"></span>
          </li>
          <li class="navelement"><%= link_to "Log in", new_user_session_path %>  <span class="span"></span> </li>
        </ul>
      <% end %>
    </div>
  </nav>



    <%= render 'shared/flashes' %>
    <%= yield %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag "application-print", :media => "print" %>
    <%= yield(:after_js) %>
  </body>
</html>
