<div class="working-space container">
  <div class="left-part">
    <div class="header text-center">

      <% if @work_session.problem_user.linkedin_picture_url.nil? %>
        <% if @work_session.problem_user.photo.nil? %>
          <%= image_tag "profile_default.png", class: "avatar" %>
        <% else %>
          <%= cl_image_tag @work_session.problem_user.photo.path, width: 70, height: 70, crop: :fill, class: "avatar" %>
        <%end%>
      <% else %>
          <%= image_tag @work_session.problem_user.linkedin_picture_url, class: "avatar" %>
      <% end %>

      <% if @work_session.solver_user.linkedin_picture_url.nil? %>
        <% if @work_session.solver_user.photo.nil? %>
          <%= image_tag "profile_default.png", class: "avatar" %>
        <% else %>
          <%= cl_image_tag @work_session.solver_user.photo.path, width: 70, height: 70, crop: :fill, class: "avatar" %>
        <%end%>
      <% else %>
          <%= image_tag @work_session.solver_user.linkedin_picture_url, class: "avatar" %>
      <% end %>


      <h2><%= @work_session.starts_at.strftime("%A, %d %b %Y %l:%M %p") %></h2>
      <p><%= @work_session.status.capitalize %></p>

      <div class="points">
        <%= pluralize(50, "point") %>  <i class="fa fa-star"></i>
      </div>

      <% if current_user.id == @work_session.solver_user_id %>
        <% if @work_session.status == "pending" %>
          <%= link_to "Validate", validate_work_session_path(@work_session), class: "btn btn-success", method: :post %>
          <%= link_to "Decline", decline_work_session_path(@work_session), class: "btn btn-danger", method: :post %>
        <% end %>
      <% elsif current_user.id == @work_session.problem_user_id %>
        <% if @work_session.status == "validate" %>
          <%= link_to "Done", done_work_session_path(@work_session), class: "btn btn-warning", method: :post %>
        <% end %>
      <% end %>
    </div>

    <div class="body">
      <div class="files-box">
        <div class="file-box">
          <%= image_tag "xls.png" %>
          <p>spreadsheet.xls</p>
        </div>
        <div class="file-box">
          <%= image_tag "pdf.png" %>
          <p>brief.pdf</p>
        </div>
      </div>
      <div class="brief-text">
        <%= @work_session.brief.html_safe %>
      </div>
    </div>

  </div>

  <div class="right-part">
    <%= render 'chat', work_session: @work_session, message: @message %>
  </div>
</div>




<%= content_for(:after_js) do %>
  <script>
  $('#new_message').keydown(function(e) {
    var key = e.which;
    if (key == 13) {
    // As ASCII code for ENTER key is "13"
      $('#new_message').submit(); // Submit form code
      }
  });

  // $('#new_message').on('click', function() {
  //   $('#message_sent_sound').play();
  // });

  </script>
<% end %>
